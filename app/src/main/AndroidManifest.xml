<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        
        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
            
        <!-- Menu Activity -->
        <activity
            android:name=".activity.MenuActivity"
            android:exported="false" />
            
        <!-- Cart Activity -->
        <activity
            android:name=".activity.CartActivity"
            android:exported="false" />
            
        <!-- Profile Activity -->
        <activity
            android:name=".activity.ProfileActivity"
            android:exported="false" />
            
        <!-- Bill History Activity -->
        <activity
            android:name=".activity.BillHistoryActivity"
            android:exported="false" />
            
        <!-- Bill Detail Activity -->
        <activity
            android:name=".activity.BillDetailActivity"
            android:exported="false" />
            
        <!-- Product Detail Activity -->
        <activity
            android:name=".activity.ProductDetailActivity"
            android:exported="false" />
            
        <!-- Debug Menu Activity -->
        <activity
            android:name=".activity.DebugMenuActivity"
            android:exported="false" />
            
        <!-- Simple Menu Activity -->
        <activity
            android:name=".activity.SimpleMenuActivity"
            android:exported="false" />
            
        <!-- Fallback Menu Activity -->
        <activity
            android:name=".activity.FallbackMenuActivity"
            android:exported="false" />
            
        <!-- Map Activity -->
        <activity
            android:name=".activity.MapActivity"
            android:exported="false" />
            
        <!-- Owner Activities -->
        <activity
            android:name=".activity.owner.OwnerDashboardActivity"
            android:exported="false" />
            
        <activity
            android:name=".activity.owner.OwnerRevenueActivity"
            android:exported="false" />
            
        <activity
            android:name=".activity.owner.OwnerMenuActivity"
            android:exported="false" />
            
        <activity
            android:name=".activity.owner.OwnerOrderActivity"
            android:exported="false" />
            
        <activity
            android:name=".activity.owner.OwnerCustomerActivity"
            android:exported="false" />
            
    </application>

</manifest>